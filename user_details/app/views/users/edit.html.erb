<div class = "container edit-page">
	<div class = "row">
		<div class ="col-md-6 col-md-offset-3 register_form">
			<div>
				<% if @user.errors.any?%>
					<ul>
						<%@user.errors.full_messages.each do |message|%>
							<li><%= message%></li>
						<%end%>
					</ul>
				<%end%>
			</div>
			<h1>Edit Profile</h1>
			<%= form_for @user do |user| %>
				<%= user.label :name%>
				<%= user.text_field :name, class:"form-control" %>

				<%= user.label :email%>
				<%= user.email_field :email, class:"form-control" %><br>

				<%= user.submit "Update", class: "btn btn-success form-control submit_btn" %>
			<%end%>
			<p><%= link_to "back", users_path%></p>
		</div>
	</div>
</div>